<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/bootstrap.php" backupGlobals="false">
    <testsuites>
        <testsuite name="PSX Framework Test Suite">
            <directory>./tests</directory>
        </testsuite>
        <testsuite name="PSX App Test Suite">
            <directory>./app/Test</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
    <php>
        <ini name="date.timezone" value="UTC" />
    </php>
</phpunit>
